<%- include('header');-%>

<div class="box" id="heading">
  <h1> <%= Listtitle %> </h1>
</div>

<div class="box">
  <!-- while rendering the dayname we have to render items at same time if one is rendered before the other then error comes -->
  <% for(var i=0; i<passedarr.length; i++) { %>    
    <div class="item">
    <input type="checkbox">
    <p> <%= passedarr[i] %> </p>
  </div>
  <% } %>

  <form class="item" method="post" action="/">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    
      <!-- identifies which list is being posted on -->
    <button type="submit" name="list" value= <%= Listtitle %>>+</button> 
  </form>
</div>

<%- include('footer');-%>

